<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PublicMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PublicMVC.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PublicMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $(document).ready(function () {
            // Add 'active' class to the current page's link
            var path = window.location.pathname;
            var pageName = path.substring(path.lastIndexOf('/') + 1); // Extract the page name

            // If the page is inside the 'Views/User' folder and named 'Login.cshtml', add 'active' class to the login link
            if (path.includes('Views/User/Login.cshtml')) {
                $("#loginLink").addClass("active");
            } else {
                // For other pages, add 'active' class based on the page name
                $("#" + pageName + "Link").addClass("active");
            }
            if (path.includes('Views/User/Create.cshtml')) {
                $("#loginLink").addClass("active");
            } else {
                // For other pages, add 'active' class based on the page name
                $("#" + pageName + "Link").addClass("active");
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
